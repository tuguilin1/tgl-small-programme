.my-header{
	width: 100%;
	height: 350rpx;
	background: #409eff;
	position: relative;
	overflow: hidden;
}

.my-avatar{
	overflow: hidden;
	display: block;
	width: 150rpx;
	height: 150rpx;
	position: absolute;
	margin-left: -75rpx;
	left: 50%;
	top:20%;
	border-radius: 50%;
}

.my-name{
	text-align: center;
	margin-top:33%;
	color:white;
}

.login{
	position: absolute;
	top: 40%;
	left: 50%;
	margin-left: -150rpx;
	width:300rpx;
	background: #409eff;
	color:white;
}

.my-info{
	margin-top: 40rpx;
	height: 120rpx;
	width: 90%;
	margin-left: 5%;
	margin-right: :5%;
	display: flex;
	justify-content: space-between;
	box-shadow: 0 0 4rpx 4rpx #999;
}

.my-info-left{
	display: flex;
	width:270rpx;
	justify-content: space-around;
}
.my-info-right{
	display: flex;
	font-size: 30rpx;
	color:#AAA;
	width: 180rpx;
	justify-content: space-around;
}
.my-info-image{
	height:60rpx;
	margin-top: 30rpx;
}

.my-info-image image{
	width: 60rpx;
	height: 60rpx;
}

.my-info-icon{
	height:30rpx;
	margin-top: 45rpx;
}

.my-info-text{
	line-height: 120rpx;
}

.my-info-icon image{
	width: 30rpx;
	height: 30rpx;
}